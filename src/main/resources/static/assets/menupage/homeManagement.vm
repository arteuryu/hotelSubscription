<body>
	<div class="clearfix">
	</div>
	<div class="clearfix" style="margin-top: 20px; ">
		<input type="button" class="btn-f1 inquire-btn add-btn l" value="新增" onclick="addBanner()" />
	</div>
	<div class="clear"></div>
	<div class="Home-manage-List">
		<table id="dataTable" cellpadding="0" cellspacing="0" border="0" width="100%" class="data-table-1"></table>
	</div>
</body>
<script type="text/javascript">
var flag= "res";
var tities = [];
var pageIndex = 1;
var tableId = "dataTable";
var flag = "ad"//子页面类型：新增/修改
var bannerInfoList = [];
$(function(){
	tities = [
  		{key: "bannerPic", title: "图片",width: "30%", filter: function(value, index, row) {
  			return '<img src="' + value + '" width="80px;" height="50px;"/>';
  		}},
  		{key: "bannerUrl", title: "链接", width: "25%", filter: function(value, index, row) {
  			return value;
  		}},
  		{key: "bannerName", title: "简介", width: "25%", filter: function(value, index, row) {
  			return value;
  		}},
  		{key: "ctrl", title: "操作",width: "20%", filter: function(value, index, row) {
			var html = "";
			html += '<input type="button" value="修改" class="btn-d2" onclick="modifyBanner(\'' + row.ID + '\')" />';
			html += '<input type="button" value="删除" class="btn-d2" onclick="deleteBnaaer(\'' + row.ID + '\')" />';
			return html;
		}}
  	];
	initTable(tableId, tities, true);
	gotoPage(1)
});

function gotoPage(pageNum) {
	var pageSize = 2;//每页多少条
	var pageWidth = 9; //有几页;
	$.ajax({
		url: '/cms/querybanners',
		type: "POST",
		dataType:"json",
		cache: false,
		data: {
			"pageNum" : pageNum,
			"pageSize" : pageSize
		},
		beforeSend: function(XMLHttpRequest){
		},
		success: function(result) {
			if (result.flag == 'Y') {
				bannerInfoList = result.bannerInfoList;
				var rows = result.bannerInfoList;
				setPager(tableId, 'gotoPage', result.dataCount, pageNum, pageSize, pageWidth);
				setData(tableId, tities, rows);
				pageIndex = pageNum;
			} else {
				alert("fail");
			}
	    },
	    error: function(xmlHttpRequest, textStatus, errorThrown) {
			//alert("error");
		},
		complete: function(XMLHttpRequest, textStatus){
		}
	});
}

//新增首页广告
var addWindowIndex = 0;
function addBanner(){
	flag = "add"
	addWindowIndex = layer.open({
		type: 2,
		title: '新增',
		shadeClose: true,
		shade: true,
		shade: [0.3],
		maxmin: true, //开启最大化最小化按钮
		area: ['1000px', '600px'],
		content: 'addBanner.vm'
	});
	layer.full(addWindowIndex);
}
//修改首页广告
var bannerId = "";
function modifyBanner(temp){
	flag = "mod";
	bannerId = temp;
	addWindowIndex = layer.open({
		type: 2,
		title: '修改',
		shadeClose: true,
		shade: true,
		shade: [0.3],
		maxmin: true, //开启最大化最小化按钮
		area: ['1000px', '600px'],
		content: 'addBanner.vm'
	});
	layer.full(addWindowIndex);
}

//删除首页广告

